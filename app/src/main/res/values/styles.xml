<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/blue</item>
        <item name="subtitleTextColor">@color/blue</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up_button</item>
    </style>

    <declare-styleable name="ContactDetailView">
        <attr name="titleText" format="string" />
        <attr name="descriptionText" format="string" />
        <attr name="typeText" format="string" />
    </declare-styleable>
</resources>
